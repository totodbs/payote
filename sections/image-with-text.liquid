{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{%- liquid
	assign video_hosted = section.settings.video_hosted

 if height == 'adapt' and use_video
	 	if video_hosted != blank
			assign ratio = video_hosted.aspect_ratio
		else
			assign ratio = 16.00 | divided_by: 9.00
		endif
	endif-%}
{%- style -%}
  .image-with-text #cadeau{
    position: relative;
  }
  @media screen and (min-width: 750px) {
    .image-with-text #cadeau img{
      bottom: -56px;
      right: 6px;
      position: absolute;
      z-index: 9;
      width: 50px;
    }
  }
  @media screen and (max-width: 750px) {
    .image-with-text #cadeau img{
      bottom: -26px;
      right: 4px;
      position: absolute;
      z-index: 9;
      width: 50px;
    }
    
  }
  .image-with-text__media--placeholder.image-with-text__media--adapt {
      height: auto !important;
  }
  deferred-media video{
    width: 100%;
  }
  .section-{{ section.id }}-padding .grid {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .grid {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image-with-text image-with-text--{{ section.settings.content_layout }} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == 'background-1' and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}" style="{%- unless section.settings.background_color == empty -%}background-color: {{ section.settings.background_color }}{%- endunless -%}">
  <div class="image-with-text__grid grid grid--gapless{% if section.settings.side_side == true %} side-by-side{% endif %} grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}{% if section.settings.full_width == false %} page-width page-width--narrow{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
      <div class="image-with-text__media image-with-text__media--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} global-media-settings {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}{% if block.settings.video != blank %} video{% endif %}"
         style="{% if section.settings.height == 'adapt' and section.settings.image != blank %}padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;{% endif %}{% if section.settings.video == blank and section.settings.video_mobile == blank and section.settings.image == blank %} height: auto;{% endif %}"
      >
        {%- if section.settings.video != blank -%}
          <deferred-media data-media-id="{{ section.settings.video.id }}">
            {{ section.settings.video | video_tag: image_size: "1080px", autoplay: section.settings.autoplay, loop: true, controls: true, preload: "none", muted:section.settings.autoplay }}
          </deferred-media>
          {%- if section.settings.video_mobile -%}
            <deferred-media class="deferred-media color-hover-media media media-video medium-up-hide large-up-hide" data-media-id="{{ section.settings.video_mobile.id }}">
              {{ section.settings.video_mobile | video_tag: image_size: "1080px", autoplay: section.settings.autoplay, loop: true, controls: true, preload: "none", muted:section.settings.autoplay}}
            </deferred-media>
          {%- endif -%}
        {%- else -%} 
          {%- if section.settings.image != blank -%}
            <deferred-media class="deferred-media media" data-media-id="Color-{{ section.settings.image.id }}" style="padding-top: min(calc(100vh - 12rem), {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%)" data-media-id="{{ section.settings.image.id }}">
              <img data-srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}{%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}{%- if section.settings.image.width >= 533 -%}{{ section.settings.image | image_url: width: 533 }} 533w,{%- endif -%}{%- if section.settings.image.width >= 720 -%}{{ section.settings.image | image_url: width: 720 }} 720w,{%- endif -%}{%- if section.settings.image.width >= 940 -%}{{ section.settings.image | image_url: width: 940 }} 940w,{%- endif -%}{%- if section.settings.image.width >= 1066 -%}{{ section.settings.image | image_url: width: 1066 }} 1066w,{%- endif -%}{{ section.settings.image | image_url }} {{ section.settings.image.width }}w" data-src="{{ section.settings.image | image_url }}" src="{{ section.settings.image | image_url: width: 165 }}" sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)" alt="" class="motion-reduce" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}" style="object-position: {{ section.settings.image.presentation.focal_point }};">
            </deferred-media>
          {%- endif -%}
        {%- endif -%}
        {%- if section.settings.video == blank and section.settings.video_mobile == blank and section.settings.image == blank -%}
          <div class="image-with-text__card">
            <div class="image-with-text__card-content">
              {%- for block in section.blocks -%}
                {%- if block.settings.img_replacement -%}
                  {% case block.type %}
                    {%- when 'heading' -%}
                      {%- style -%}
                        .section-{{ section.id }}-padding .image-with-text__heading.block-{{ block.id}} {
                          color: {{ block.settings.heading_color }};
                        }
                      {%- endstyle -%}
                      <{{ block.settings.heading_size }} class="image-with-text__heading {{ block.settings.heading_size }} block-{{ block.id}}" {% if block.settings.heading_alignment != "left" %}style="text-align:{{ block.settings.heading_alignment }};"{% endif %} {{ block.shopify_attributes }}>
                        {% render 'title', title: block.settings.heading, nocolor: section.settings.no_color %}
                      </{{ block.settings.heading_size }}>
                    {%- when 'caption' -%}
                      {%- style -%}
                        .section-{{ section.id }}-padding .image-with-text__text--caption.block-{{ block.id}} {
                          color: {{ block.settings.caption_color }};
                        }
                      {%- endstyle -%}
                      <p class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }} block-{{ block.id}}" {% if block.settings.caption_alignment != "left" %}style="text-align:{{ block.settings.caption_alignment }};"{% endif %} {{ block.shopify_attributes }}>{{ block.settings.caption | escape }}</p>
                    {%- when 'text' -%}
                      {%- style -%}
                        .section-{{ section.id }}-padding .image-with-text__text.block-{{ block.id}} {
                          color: {{ block.settings.text_color }};
                        }
                      {%- endstyle -%}
                      <div class="image-with-text__text rte {{ block.settings.text_style }}{% if block.settings.text_column > 1 %} column-count-{{ block.settings.text_column }}{% endif %} block-{{ block.id}}" {% if block.settings.text_alignment != "left" %}style="text-align:{{ block.settings.text_alignment }};"{% endif %} {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
                    {%- when 'button' -%}
                      {%- style -%}
                        .section-{{ section.id }}-padding .button.block-{{ block.id}} {
                          --color-button: {{ block.settings.button_color | color_extract: 'red'}},{{ block.settings.button_color | color_extract: 'green'}},{{ block.settings.button_color | color_extract: 'blue'}};
                          --color-button-text: {{ block.settings.button_text_color | color_extract: 'red'}},{{ block.settings.button_text_color | color_extract: 'green'}},{{ block.settings.button_text_color | color_extract: 'blue'}};
                        }
                      {%- endstyle -%}
                      {%- if block.settings.button_label != blank -%}
                        <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %} block-{{ block.id}}" {{ block.shopify_attributes }}>
                          {% render 'icon-accordion', icon: block.settings.icon %}
                          {{ block.settings.button_label | escape }}
                        </a>
                      {%- endif -%}
                    {%- when 'product' -%}
                      {%- style -%}
                        .section-{{ section.id }}-padding .image-with-text__product.block-{{ block.id}} .button {
                          background: {{ block.settings.button_color }};
                          color: {{ block.settings.button_text_color }};
                        }
                        .section-{{ section.id }}-padding .image-with-text__product.block-{{ block.id}} .button:after {
                          box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba({{ block.settings.button_color.rgb | replace: ' ', ',' }},var(--border-opacity)),0 0 0 var(--buttons-border-width) rgba({{ block.settings.button_color.rgb | replace: ' ', ',' }},var(--alpha-button-background));
                        }
                        .section-{{ section.id }}-padding .image-with-text__product.block-{{ block.id}} .button:not([disabled]):hover:after {
                           box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba({{ block.settings.button_color.rgb | replace: ' ', ',' }},var(--border-opacity)),0 0 0 calc(var(--buttons-border-width) + 1px) rgba({{ block.settings.button_color.rgb | replace: ' ', ',' }},var(--alpha-button-background));
                        }
                      {%- endstyle -%}
                      {%- if block.settings.link_product_1 != blank -%}
                        <div class="image-with-text__product block-{{ block.id}}">
                          {% render 'cart-drawer-product', card_product: block.settings.link_product_1, show_atc: false %}
                        </div>
                      {%- endif -%}
                  {%- endcase -%}
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="image-with-text__text-item grid__item">
      <div id="ImageWithText--{{ section.id }}" class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container" style="{%- unless section.settings.background_color == empty -%}background-color: {{ section.settings.background_color }}{%- endunless -%}">
        {%- for block in section.blocks -%}
          {%- if block.settings.img_replacement == false -%}
            {% case block.type %}
              {%- when 'heading' -%}
                {%- style -%}
                  .section-{{ section.id }}-padding .image-with-text__heading.block-{{ block.id}} {
                    color: {{ block.settings.heading_color }};
                  }
                {%- endstyle -%}
                <{{ block.settings.heading_size }} class="image-with-text__heading {{ block.settings.heading_size }} block-{{ block.id}}" {{ block.shopify_attributes }}>
                  {% render 'title', title: block.settings.heading, nocolor: section.settings.no_color %}
                </{{ block.settings.heading_size }}>
              {%- when 'caption' -%}
                {%- style -%}
                  .section-{{ section.id }}-padding .image-with-text__text--caption.block-{{ block.id}} {
                    color: {{ block.settings.caption_color }};
                  }
                {%- endstyle -%}
                <p class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }} block-{{ block.id}}" {{ block.shopify_attributes }}>{{ block.settings.caption | escape }}</p>
              {%- when 'text' -%}
                {%- style -%}
                  .section-{{ section.id }}-padding .image-with-text__text.block-{{ block.id}} {
                    color: {{ block.settings.text_color }};
                  }
                {%- endstyle -%}
                <div class="image-with-text__text rte {{ block.settings.text_style }}{% if block.settings.text_column > 1 %} column-count-{{ block.settings.text_column }}{% endif %} block-{{ block.id}}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
              {%- when 'button' -%}
                {%- style -%}
                  .section-{{ section.id }}-padding .button.block-{{ block.id}} {
                    --color-button: {{ block.settings.button_color | color_extract: 'red'}},{{ block.settings.button_color | color_extract: 'green'}},{{ block.settings.button_color | color_extract: 'blue'}};
                    --color-button-text: {{ block.settings.button_text_color | color_extract: 'red'}},{{ block.settings.button_text_color | color_extract: 'green'}},{{ block.settings.button_text_color | color_extract: 'blue'}};
                  }
                {%- endstyle -%}
                {%- if block.settings.button_label != blank -%}
                  <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %} block-{{ block.id}}" {{ block.shopify_attributes }}>
                    {% render 'icon-accordion', icon: block.settings.icon %}
                    {{ block.settings.button_label | escape }}
                  </a>
                {%- endif -%}
              {%- when 'product' -%}
                {%- style -%}
                  .section-{{ section.id }}-padding .image-with-text__product.block-{{ block.id}} .button {
                    background: {{ block.settings.button_color }};
                    color: {{ block.settings.button_text_color }};
                  }
                  .section-{{ section.id }}-padding .image-with-text__product.block-{{ block.id}} .button:after {
                    box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba({{ block.settings.button_color.rgb | replace: ' ', ',' }},var(--border-opacity)),0 0 0 var(--buttons-border-width) rgba({{ block.settings.button_color.rgb | replace: ' ', ',' }},var(--alpha-button-background));
                  }
                  .section-{{ section.id }}-padding .image-with-text__product.block-{{ block.id}} .button:not([disabled]):hover:after {
                     box-shadow: 0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba({{ block.settings.button_color.rgb | replace: ' ', ',' }},var(--border-opacity)),0 0 0 calc(var(--buttons-border-width) + 1px) rgba({{ block.settings.button_color.rgb | replace: ' ', ',' }},var(--alpha-button-background));
                  }
                {%- endstyle -%}
                {%- if block.settings.link_product_1 != blank -%}
                  <div class="image-with-text__product block-{{ block.id}}">
                    {% render 'cart-drawer-product', card_product: block.settings.link_product_1, show_atc: false %}
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
    
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "video",
      "id": "video",
      "label": "t:sections.image-with-text.settings.video.label"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "default": false,
      "label": "Display Autoplay"
    },
    {
      "type": "video",
      "id": "video_mobile",
      "label": "t:sections.image-with-text.settings.video_mobile.label"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.image-with-text.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.image-with-text.settings.height.options__2.label"
