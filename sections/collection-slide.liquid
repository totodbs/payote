      "settings": [
        {
          "type": "url",
          "id": "url_link",
          "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
        },
        {
          "type":"text",
          "id":"title",
          "label":"Titre",
          "default":"Femme",
          "info": "Ce titre devra suffir sur une ligne"
        },
        {
      "type":"image_picker",
      "id":"img_desc",
      "label":"Image Descriptive"
      }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slide Collection"
    }
  ]
}
{% endschema %}