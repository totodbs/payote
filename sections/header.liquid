                                                </deferred-media>
                                              </div>
                                              {%- if block.settings.video_mobile -%}
                                                <deferred-media class="deferred-media color-hover-media media media-video medium-up-hide large-up-hide" data-media-id="{{ block.settings.video_mobile.id }}">
